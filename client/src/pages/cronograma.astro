---
export const prerender = false; 

import CronogramaForm from "@/components/CronogramaForm";
import Layout from "@/layouts/Layout.astro";
import { SignedIn, SignedOut } from "@clerk/astro/react";

---

<Layout>
  <SignedIn>
     <div class="border w-5/12 justify-self-center mt-5 border-indigo-200 rounded-lg shadow-lg shadow-blue-300/50">
    <h1 class="text-2xl font-bold uppercase text-center mt-4">
      Programación De Arqueos Mensual
    </h1>
    <CronogramaForm client:load />
  </div>
  </SignedIn>

  <SignedOut>
    <div class="flex items-center justify-center min-h-screen">
      <div class="text-center">
        <h1 class="text-2xl font-bold mb-4">No autenticado</h1>
        <p class="text-gray-600">Por favor inicia sesión para acceder a esta página.</p>
        <a
          href="/"
          class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition"
        >
          Ir al Login
        </a>
      </div>
    </div>
  </SignedOut>
</Layout>