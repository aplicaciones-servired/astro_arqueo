{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // ðŸ”¹ Ignorar archivos con errores fuera de tu cÃ³digo
    "ignoreDeprecations": "5.0"
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "env.schema.mjs"  ],
  "exclude": [
    "dist",
    "node_modules",
    "node_modules/auth-astro/src/integration.ts"
  ]
}
