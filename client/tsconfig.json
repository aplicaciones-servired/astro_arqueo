{
  "compilerOptions": {
    "noEmit": true, // ‚¨Ö NO generar ning√∫n .js
    "declaration": true, // ‚¨Ö S√ç generar archivos .d.ts
    "declarationDir": "./types", // ‚¨Ö Carpeta para los tipos generados
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // üîπ Ignorar archivos con errores fuera de tu c√≥digo
    "ignoreDeprecations": "5.0"
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "env.schema.mjs"
  ],
  "exclude": ["dist", "node_modules", "src/**/*.js"]
}
