{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["dist", "node_modules", "node_modules/auth-astro"]
}
